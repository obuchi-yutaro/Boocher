.sign-up
  .signup-contents
  .centerup-content
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true

      .field
        = f.label :nickname
        %em (15 characters maximum)
        %br/
        = f.text_field :nickname, autofocus: true, maxlength: "15"


      .field
        = f.label :gender
        %br/
        = f.select :gender, [["男性", "man"], ["女性", "woman"], ["選択なし", "no_selection"]]


      .field
        = f.label :ages
        %br/
        = f.select :ages, [["10歳以下", "infant"], ["10代", "teens"], ["20代", "twenties"], ["30代", "thirties"], ["40代", "forties"], ["50代", "fifties"], ["60代", "sixties"], ["70代", "seventies"], ["80代", "eighties"], ["90代", "nineties"], ["100歳以上", "over_hundred"]]

      .field
        = f.label :occupation
        %br/
        = f.select :occupation, [["ビジネスパーソン", "ビジネスパーソン"], ["専門職", "専門職"], ["経営者", "経営者"], ["研究職", "研究職"], ["定年退職者", "定年退職者"], ["学生", "学生"], ["アーティスト", "アーティスト"], ["フリーター", "フリーター"], ["その他", "その他"]]

      .field
        = f.label : genre
        %br/
        = f.select :genre, [["漫画", "漫画"], ["小説", "小説"] , ["ビジネス", "ビジネス"], ["自己啓発", "自己啓発"], ["その他", "その他"]]

      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit "Sign up"
    = render "devise/shared/links"
